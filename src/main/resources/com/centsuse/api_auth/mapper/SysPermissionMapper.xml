<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.centsuse.api_auth.mapper.SysPermissionMapper">

    <resultMap id="BaseResultMap" type="com.centsuse.api_auth.dao.SysPermission">
            <id property="id" column="id" />
            <result property="appCode" column="app_code" />
            <result property="parentId" column="parent_id" />
            <result property="name" column="name" />
            <result property="code" column="code" />
            <result property="type" column="type" />
            <result property="path" column="path" />
            <result property="component" column="component" />
            <result property="method" column="method" />
            <result property="icon" column="icon" />
            <result property="sort" column="sort" />
            <result property="status" column="status" />
            <result property="description" column="description" />
            <result property="createTime" column="create_time" />
            <result property="updateTime" column="update_time" />
            <result property="createBy" column="create_by" />
            <result property="updateBy" column="update_by" />
    </resultMap>

    <sql id="Base_Column_List">
        id,app_code,parent_id,name,code,type,
        path,component,method,icon,sort,
        status,description,create_time,update_time,create_by,
        update_by
    </sql>

    <select id="userHasPermission" resultType="java.lang.Integer">
        SELECT
            COUNT(1)
        FROM
            sys_permission p
        INNER JOIN
            sys_role_permission rp ON p.id = rp.permission_id
        INNER JOIN
            sys_user_role ur ON rp.role_id = ur.role_id
        WHERE
            ur.user_id = #{userId}
            AND p.code = #{permissionCode}
            AND p.status = 1
    </select>

    <select id="selectPermissionsByUserId" resultMap="BaseResultMap">
        SELECT
            DISTINCT p.*
        FROM
            sys_permission p
        INNER JOIN
            sys_role_permission rp ON p.id = rp.permission_id
        INNER JOIN
            sys_user_role ur ON rp.role_id = ur.role_id
        WHERE
            ur.user_id = #{userId}
            AND p.status = 1
    </select>
</mapper>
